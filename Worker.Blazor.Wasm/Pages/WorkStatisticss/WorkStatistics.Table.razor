<MDataTable Headers="_headers"
            Items="_workStatistics"
            ItemsPerPage="10"
            Class="elevation-1"
            HideDefaultFooter="true"
            ItemKey="x=>x.Name"
            Width="@("120%")"
            Search="@Search"
            FixedRight>
            <ItemColContent>
            @if(context.Header.Value == "AvatarsPath")
            {
            <MAvatar>
                <MImage Src="@context.Item.AvatarsPath"
                        Alt="@context.Item.Name">
                </MImage>
            </MAvatar>
            }
            else
            {
                @context.Value
            }
            </ItemColContent>
</MDataTable>

@code{
    [Parameter]
    public string Search { get; set; }
    public record WorkStatisticsItem
    {
        public string Name{ get; set; }
        public string AvatarsPath{ get; set; }
